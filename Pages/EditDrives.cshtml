@page
@model EditDrivesModel
@{
    ViewData["Title"] = "Edit Drives";
}

    
    @for (var i = 0; i < Model.drives.Count; i++)
    {
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col">
                    @Html.HiddenFor(it => it.drives[i].Id)
                    @Html.TextBoxFor(it => it.drives[i].DriveLetter, new { @placeholder="Drive Letter", @class="form-control" })
                </div>

                <div class="col">
                    @Html.TextBoxFor(it => it.drives[i].DriveName, new { @placeholder="Drive Name", @class="form-control" })
                </div>

                <div class="col">
                    <button id="button" class="btn btn-primary">Save Edit</button>
                </div>

            </div>
            <br />

    }
    
}
