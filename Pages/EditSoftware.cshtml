@page
@model EditSoftwareModel
@{
    ViewData["Title"] = "Edit Drives";
}

    
    @for (var i = 0; i < Model.software.Count; i++)
    {
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col">
                    @Html.HiddenFor(it => it.software[i].Id)
                    @Html.TextBoxFor(it => it.software[i].SoftwareName, new { @placeholder="Software Name", @class="form-control" })
                </div>

                <div class="col">
                    <button id="button" class="btn btn-primary">Save Edit</button>
                </div>
            </div>
            <br />
        }
    }
